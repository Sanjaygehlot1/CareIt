generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  profileUrl String?
  provider String 
  providerId String
  
  googleProviderId   String? @unique
  googleAccessToken  String?
  googleRefreshToken String?
  googleEmail        String?
  calendar           Boolean @default(false)

  githubProviderId   String? @unique
  githubAccessToken  String?
  githubRefreshToken String?
  githubUsername     String?
  githubConnected    Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  editorActivities EditorActivity[]
  focusStats       FocusStats[]

  @@map("users")
}

model EditorActivity {
  id          Int      @id @default(autoincrement())
  duration    Int
  language    String?
  projectName String?
  file        String?
  keystrokes  Int?
  recordedAt  DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@index([userId, recordedAt])
}

model FocusStats {
  id        Int      @id @default(autoincrement())
  userId    Int
  duration  Int      @default(0)
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}
