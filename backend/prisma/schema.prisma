generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  name          String
  email         String  @unique
  profileUrl    String?
  provider      String
  apiKey        String? @unique
  currentStreak Int     @default(0)
  longestStreak Int     @default(0)
  streakUpdatedAt   DateTime?

  googleProviderId   String? @unique
  googleAccessToken  String?
  googleRefreshToken String?
  calendar           Boolean @default(false)

  githubProviderId        String? @unique
  githubAccessToken       String?
  githubRefreshToken      String?
  githubUsername          String?
  githubConnected         Boolean @default(false)
  githubAppInstalled      Boolean @default(false)
  githubAppInstallationId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  editorActivities EditorActivity[]
  focusStats       FocusStats[]
  streakStats      StreakStats[]

  @@map("users")
}

model EditorActivity {
  id          Int      @id @default(autoincrement())
  duration    Int      @default(0)
  language    String?
  projectName String?
  file        String?
  keystrokes  Int?     @default(0)
  date        DateTime @db.Date

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@unique([userId, projectName, file, date])
}

model FocusStats {
  id        Int      @id @default(autoincrement())
  userId    Int
  duration  Int      @default(0)
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

model StreakStats {
  id              Int       @id @default(autoincrement())
  userId          Int
  date            DateTime  @db.Date
  commitCount     Int       @default(0)
  codingDuration  Int       @default(0)
  hasStreak       Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}
